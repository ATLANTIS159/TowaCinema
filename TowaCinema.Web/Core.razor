<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Core).Assembly" AdditionalAssemblies="new[] { typeof(Index).Assembly }">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(TowaCinemaMainLayout)">
                <NotAuthorized>ERROR</NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(TowaCinemaMainLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>